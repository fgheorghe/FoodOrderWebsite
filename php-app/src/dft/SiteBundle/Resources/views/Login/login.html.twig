<div class="clear"></div>


<section class="banner_login_bg clearfix">

    <header class="container clearfix">
        <div class="banner_contact">
            <h1>Login</h1>
            <p class="text-white">Home > Login</p>
        </div>

        <div class="clear"></div>
    </header>
</section>

<div class="clear padding40"></div>

<section class="container clearfix">


    <div class="review">
        <div class="login_box">
            <h2>Login To Your Account</h2>
            <h1 class="regular brown bottom_line"></h1>
            {% if error_message %}
            <div style="text-align: center; font-weight: bold;">{{ error_message }}</div>
            {% endif %}
            <br/>

            <form action="" method="POST">
                <ul>
                    <li>Email:</li>
                    <li class="field"><input class="inputText" type="text" id="email" name="email" placeholder="" /></li>
                    <li>Password:</li>
                    <li class="field"><input class="inputText" type="password" id="password" name="password" placeholder="" /></li>

                </ul>

                <div class="remember">
                    <input type="checkbox"> Remember &nbsp; <span><a href="/forgot-password/">Forgot Password!</a></span>
                </div>

                <div class="clear"></div>
                <div class="clear padding20"></div>
                <div class="login">
                    <input class="inputbutton" style="width: 240px;" type="submit" value="Login" />
                </div>

            </form>
            <div class="clear"></div>
        </div>


        <div class="login_box signup_box">
            <h2>Create New Account</h2>
            <h1 class="regular brown bottom_line"></h1>

            <form action="#" id="myForm">
                <ul>
                    <li>User Name:</li>
                    <li class="field"><input class="inputText" type="text" id="name" name="name" placeholder="" /></li>
                    <li>Email:</li>
                    <li class="field"><input class="inputText" type="text" id="name" name="email" placeholder="" /></li>
                    <li>Password:</li>
                    <li class="field"><input class="inputText" type="password" id="pass" name="pass" placeholder="" /></li>
                    <li class="confirm_pass">Confirm:</li>
                    <li class="field"><input class="inputText" type="password" id="pass" name="pass" placeholder="" /></li>

                    <!--<li>Contact:</li>
                 <li class="field"><input class="inputText" type="password" id="pass" name="contact" placeholder="" /></li>-->

                </ul>
            </form>

            <div class="clear padding20"></div>
            <div class="login">
                <a href="#" class="button">Signup Now!</a>
            </div>

            <div class="clear"></div>
        </div>
</div>
</section>
