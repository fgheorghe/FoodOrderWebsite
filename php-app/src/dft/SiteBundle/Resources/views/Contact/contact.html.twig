<!-- START CONTENT -->
<section class="container clearfix">
    <!-- START PAGE INFO -->
    <header class="container page_info clearfix">
        <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
        <div style="overflow:hidden;height:280px;width:100%;">
            <div id="gmap_canvas" style="height:280px;width:100%;"></div>
            <a class="google-map-code" href="http://www.addmap.org" id="get-map-data">www.addmap.org</a>
            <style>#gmap_canvas img {
                    max-width: none !important;
                    background: none !important
                }</style>
            <a class="google-map-data" href="http://www.stromleo.de" id="get-map-data">http://www.stromleo.de</a></div>
        <script type="text/javascript"> function init_map() {
                //Call this wherever needed to actually handle the display
                function codeAddress(zipCode) {
                    var geocoder = new google.maps.Geocoder();
                    geocoder.geocode( { 'address': zipCode}, function(results, status) {
                        if (status == google.maps.GeocoderStatus.OK) {
                            //Got result, center the map and put it out there
                            map.setCenter(results[0].geometry.location);
                            var marker = new google.maps.Marker({
                                map: map,
                                position: results[0].geometry.location
                            });
                        } else {
                            alert("Geocode was not successful for the following reason: " + status);
                        }
                    });
                }
                var myOptions = {zoom: 17, center: new google.maps.LatLng(40.8054567, -73.96547470000002), mapTypeId: google.maps.MapTypeId.ROADMAP};
                map = new google.maps.Map(document.getElementById("gmap_canvas"), myOptions);
                codeAddress("{{ restaurant_settings.restaurant_post_code }}");

            }
            google.maps.event.addDomListener(window, 'load', init_map);</script>
        <h1 class="regular brown bottom_line"></h1>

        <div class="clear"></div>
    </header>

    <!-- END PAGE INFO -->

    <div class="padding15"></div>

    <div class="contact">
        <!-- START COL 1/3 -->
        <div class="take_away">

            <h2>Take Away info</h2>

            <div class="padding20"></div>

            <p>
                {% if front_end_settings.info_text %}{{ front_end_settings.info_text }}{% endif %}
            </p>

            <div class="padding20"></div>
            <p>{% if front_end_settings.full_address %}Address: {{ front_end_settings.full_address }}<br/>
                {% endif %}
                {% if front_end_settings.phone_numbers %}
                    <br/>
                    Telephone: {{ front_end_settings.phone_numbers }}</h2>
                {% endif %}
            </p>

            <div class="clear"></div>

        </div>
        <!-- END COL 1/3 -->

        <!-- START COL 2/3 LAST -->
        <div class="fill_form">

            <h2>Contact Form</h2>

            <div class="padding20"></div>
            {% if error_message %}
                <div style="font-weight: bold;">{{ error_message }}</div>
            {% endif %}
            <br/>

            <!-- START CONTACT FORM -->
            <form action="" class="contact_form" id="myForm" method="POST">
                <ul>
                    <li>
                        <input value="{{ customer_data ? customer_data.name : "" }}" class="inputText" type="text" id="name" name="name" placeholder="Name" />
                    </li>

                    <li>
                        <input value="{{ customer_data ? customer_data.email : "" }}" class="inputText" type="text" id="email" name="email" placeholder="Email" />
                    </li>

                    <li>
                        <input value="{{ customer_data ? customer_data.phone_number : "" }}" class="inputText" type="text" id="phone_number" name="phone_number" placeholder="Phone" />
                    </li>

                    <li>
                        <textarea class="inputTextarea" cols="88" rows="6" id="message" name="message"
                                  placeholder="Message:"></textarea>
                    </li>
                    <div class="clear"></div>
                    <li class="submit">
                        <input type="reset" value="RESET" class="inputbutton"/>
                    </li>

                    <li class="submit">
                        <input type="submit" value="SEND" class="inputbutton"/>
                    </li>

                </ul>
            </form>

            <script>
                function myFunction() {
                    document.getElementById("myForm").reset();
                }
            </script>
            <!-- END CONTACT FORM -->

        </div>
        <!-- END COL 2/3 LAST -->

    </div>

    <div class="clear padding20"></div>


</section>
<!-- END CONTENT -->

<div class="clear padding40"></div>

